{
  "name": "dx-services",
  "version": "0.0.12-SNAPSHOT",
  "description": "",
  "main": "src/runPublicApi.js",
  "directories": {
    "test": "test"
  },
  "bin": {
    "dutch-exchange": "./src/cli/cli.js"
  },
  "scripts": {
    "start": "npm run api",
    "api": "DEBUG=ERROR-*,WARN-*,INFO-*,*:BuyLiquidityBot node src/runPublicApi.js",
    "dev": "DEBUG=*-dx-service:* nodemon src/runPublicApi.js",
    "trace": "DEBUG=* nodemon src/runPublicApi.js",
    "kovan": "DEBUG=ERROR-*,WARN-*,INFO-* PUBLIC_API_PORT=9090 NETWORK=kovan nodemon src/runPublicApi.js",
    "rinkeby": "DEBUG=ERROR-*,WARN-*,INFO-*, PUBLIC_API_PORT=9091 NETWORK=rinkeby nodemon src/runPublicApi.js",
    "bots-script": "./src/run-bots.sh",
    "bots": "DEBUG=ERROR-*,WARN-*,INFO-*,*:BuyLiquidityBot node src/runBots.js",
    "bots-dev": "DEBUG=*-dx-service:* nodemon src/runBots.js",
    "bots-trace": "DEBUG=* node src/runBots.js",
    "bots-kovan": "DEBUG=ERROR-*,WARN-*,INFO-* PUBLIC_API_PORT=9090 NETWORK=kovan node src/runBots.js",
    "bots-rinkeby": "DEBUG=ERROR-*,WARN-*,INFO-*, PUBLIC_API_PORT=9091 NETWORK=rinkeby node src/runBots.js",
    "test": "NODE_ENV=test jest",
    "test-coverage": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "tdd": "NODE_ENV=test jest --watch",
    "test-debug": "NODE_ENV=test DEBUG=* jest",
    "cli": "DEBUG=ERROR-*,WARN-*,INFO-* node src/cli/cli.js",
    "cli-rinkeby": "DEBUG=ERROR-*,WARN-*,INFO-* NETWORK=rinkeby node src/cli/cli.js",
    "cli2": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService node tests/playground/cli/bot-cli.js",
    "cli2-kovan": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService NETWORK=kovan node tests/playground/cli/bot-cli.js",
    "cli2-rinkeby": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService NETWORK=rinkeby node tests/playground/cli/bot-cli.js",
    "cli2-debug": "DEBUG=* node tests/playground/cli/bot-cli.js",
    "rpc": "ganache-cli -d --mnemonic 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --defaultBalanceEther '500'",
    "console": "cd node_modules/@gnosis.pm/dutch-exchange-smartcontracts && truffle console",
    "contracts-compile": "truffle compile",
    "contracts-deploy-dx": "cd node_modules/@gnosis.pm/dutch-exchange-smartcontracts/ && truffle deploy",
    "contracts-deploy-project": "truffle deploy",
    "contracts-deploy": "npm run contracts-deploy-dx && npm run contracts-deploy-project",
    "contracts-clean": "rm -rf build",
    "contracts-setup": "node tests/playground/cli/bot-cli.js --setup && node tests/playground/cli/bot-cli.js --add-tokens",
    "contracts": "npm run contracts-clean && npm run contracts-deploy && npm run contracts-setup",
    "tasks-claimFunds": "DEBUG=ERROR-*,WARN-*,INFO-* node src/tasks/claimFunds.js",
    "tasks-generateWeeklyReport": "DEBUG=ERROR-*,WARN-*,INFO-* node src/tasks/generateWeeklyReport.js",
    "tasks-generateDailyReport": "DEBUG=ERROR-*,WARN-*,INFO-* node src/tasks/generateDailyReport.js",
    "doc": "esdoc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gnosis/dx-services.git"
  },
  "license": "MIT",
  "dependencies": {
    "@gnosis.pm/dutch-exchange-smartcontracts": "^0.4.5",
    "@slack/client": "^4.1.0",
    "commander": "^2.15.0",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "git-rev-sync": "^1.11.1",
    "got": "^8.3.0",
    "moment": "^2.22.0",
    "node-cache": "^4.2.0",
    "qs": "^6.5.1",
    "raven": "^2.4.2",
    "truffle-contract": "^3.0.3",
    "truffle-hdwallet-provider": "git+https://github.com/trufflesuite/truffle-hdwallet-provider.git#71520a2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "ganache-cli": "^6.1.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "truffle": "^4.0.6"
  }
}
