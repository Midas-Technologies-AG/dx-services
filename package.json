{
  "name": "dx-services",
  "version": "0.0.11-SNAPSHOT",
  "description": "",
  "main": "src/main.js",
  "directories": {
    "test": "test"
  },
  "bin": {
    "dutch-exchange": "./src/cli/cli.js"
  },
  "scripts": {
    "start": "DEBUG=ERROR-*,WARN-*,INFO-*,*:BuyLiquidityBot node src/main.js",
    "kovan": "DEBUG=ERROR-*,WARN-*,INFO-* API_PORT=9090 NODE_ENV=dev NETWORK=kovan node src/main.js",
    "rinkeby": "DEBUG=ERROR-*,WARN-*,INFO-*, API_PORT=9091 NODE_ENV=dev NETWORK=rinkeby node src/main.js",
    "dev": "DEBUG=*-dx-service:* node src/main.js",
    "pro": "DEBUG=ERROR-*,WARN-*,INFO-* NODE_ENV=PRO node src/main.js",
    "trace": "DEBUG=* node src/main.js",
    "test": "NODE_ENV=test jest",
    "test-coverage": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
    "tdd": "NODE_ENV=test jest --watch",
    "test-debug": "NODE_ENV=test DEBUG=* jest",
    "cli2": "DEBUG=ERROR-*,WARN-*,INFO-* node src/cli/cli.js",
    "cli2-rinkeby": "DEBUG=ERROR-*,WARN-*,INFO-* NODE_ENV=dev NETWORK=rinkeby node src/cli/cli.js",
    "cli": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService node tests/playground/cli/bot-cli.js",
    "cli-kovan": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService NODE_ENV=dev NETWORK=kovan node tests/playground/cli/bot-cli.js",
    "cli-rinkeby": "DEBUG=ERROR-*,WARN-*,*-dx-service:tests*,*:DxTradeService NODE_ENV=dev NETWORK=rinkeby node tests/playground/cli/bot-cli.js",
    "cli-debug": "DEBUG=* node tests/playground/cli/bot-cli.js",
    "rpc": "ganache-cli -d --mnemonic 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --defaultBalanceEther '500'",
    "console": "cd node_modules/@josojo/dutch-exchange-smartcontracts; truffle console",
    "copy-depenencies-so-truffle-can-deploy": "mkdir -p node_modules/@josojo/dutch-exchange-smartcontracts/node_modules/@gnosis.pm; cp -r node_modules/@gnosis.pm/* node_modules/@josojo/dutch-exchange-smartcontracts/node_modules/@gnosis.pm",
    "contracts-compile": "truffle compile",
    "contracts-deploy-dx": "npm run copy-depenencies-so-truffle-can-deploy; cd node_modules/@josojo/dutch-exchange-smartcontracts/; truffle deploy",
    "contracts-deploy-project": "truffle deploy",
    "contracts-deploy": "npm run contracts-deploy-dx; npm run contracts-deploy-project",
    "contracts-clean": "rm -rf build",
    "contracts-setup": "node tests/playground/cli/bot-cli.js --setup; node tests/playground/cli/bot-cli.js --add-tokens",
    "contracts": "npm run contracts-clean; npm run contracts-deploy; npm run contracts-setup",
    "doc": "esdoc"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gnosis/dx-services.git"
  },
  "author": "Angel Rodriguez <anxolin@gmail.com> (https://github.com/anxolin)",
  "license": "UNLICENSED",
  "dependencies": {
    "commander": "^2.15.0",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "git-rev-sync": "^1.11.1",
    "got": "^8.3.0",
    "moment": "^2.22.0",
    "node-cache": "^4.2.0",
    "qs": "^6.5.1",
    "raven": "^2.4.2",
    "truffle-contract": "^3.0.3",
    "truffle-hdwallet-provider": "git+https://github.com/trufflesuite/truffle-hdwallet-provider.git#71520a2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@josojo/dutch-exchange-smartcontracts": "^0.2.3",
    "coveralls": "^3.0.0",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "ganache-cli": "^6.1.0",
    "jest": "^22.4.3",
    "truffle": "^4.0.6"
  }
}
